@model List<LNBshop.Models.CartItem>

<div class="aa-cartbox">
    <a class="aa-cart-link" href="#">
        <span class="fa fa-shopping-basket"></span>
        <span class="aa-cart-title">Giỏ hàng</span>
        <span class="aa-cart-notify">@Model.Count()</span>
    </a>
    <div class="aa-cartbox-summary">
        @if (Model.Count > 0)
        {

            <ul>
                @foreach (var item in Model)
                {
                    <li>
                        <a class="aa-cartbox-img" href="#"><img src="@item.Product.Image" width="150" height="150" alt="img"></a>
                        <div class="aa-cartbox-info">
                            <h4><a href="#">@item.Product.Name</a></h4>
                            <p>@item.Quantity x @(item.Product.PromotionPrice.HasValue? item.Product.PromotionPrice.Value.ToString("N0"):item.Product.Price.Value.ToString("N0"))<sup>đ</sup></p>
                        </div>
                        <a class="btn-delete" href="#"><span class="fa fa-times"></span></a>
                    </li>
                }

            </ul>
            <a class="aa-cartbox-checkout aa-primary-btn" href="/gio-hang">Chi tiết</a>
        }
        else
        {
            <span class="alert alert-danger">Giỏ hàng rỗng</span>
        }
    </div>
</div>
