@model PagedList.IPagedList<Models.EF.Content>
@using PagedList.Mvc
@{
    ViewBag.Title = "Danh sách tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
@section header{
    Danh sách tin tức
}

@section jsfooter{
    <script src="~/Assets/Admin/js/Controller/ChangeStatus.js"></script>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách tin tức</h6>
    </div>
    <div class="card-body">
        <a href="/Admin/Content/Create">Thêm bài viết</a>

        @using (Html.BeginForm("Index", "Content", FormMethod.Get))
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="input-group">
                        <!--Truyền value để lưu giữ giá trị search trên khung tìm kiếm"-->
                        <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control bg-light border-0 small" placeholder="Tìm kiếm (Tên bài viết)" />
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-search fa-sm"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Thao tác</th>
                        <th>Bài viết</th>
                        <th>Hình ảnh</th>
                        <th>Ngày tạo</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Thao tác</th>
                        <th>Bài viết</th>
                        <th>Hình ảnh</th>
                        <th>Ngày tạo</th>
                        <th>Trạng thái</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID">
                            <td>
                                <a href="/Admin/Content/Edit/@item.ID">Sửa</a>
                                |
                                @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                           //Cú pháp : Ajax.ActionLink("Tên hiển thị", "Tên action trong controller", new { gán biến cần gửi }
                           //, new AjaxOptions "phần này để hiển thị thông báo và xác nhận"
                           {
                               Confirm = "Bạn có muốn xóa bản ghi này không ?",//thông báo
                               OnComplete = "$('#row_" + item.ID + "').remove()",//xóa bản ghi hiện đang hiển thị
                               HttpMethod = "Delete"//yêu cầu server gọi phương thức request là DELETE
                           })
                            </td>
                            <td>@item.Name</td>
                            <td><img src="@item.Image" alt="@item.Name" height="84" width="84"></td>
                            <td>@item.CreatedDate</td>
                            <td><strong><a href="#" class="btnContent-active" data-id="@item.ID">@Html.Raw(item.Status ? "Kích hoạt" : "Khoá")</a></strong></td>
                        </tr>
                    }
                </tbody>
            </table>
            <!--Thanh chuyển trang-->
            <div style="background: #fff; text-align: right; padding: 4px;">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @class = "black", @searchString = @ViewBag.SearchString }), new PagedListRenderOptions()
                //truyền thêm biến @searchString để lưu lại searchString mới trong lần chuyển trang
           {
               UlElementClasses = new[] { "pagination" },//thêm class cho thẻ ul
               LiElementClasses = new[] { "page-link" }//thêm class cho thẻ li
           })
            </div>
        </div>
    </div>

    <!--jQuery-->
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>

    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
